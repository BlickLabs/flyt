.footer
  height 328px
  flex-shrink 0;

  &-content
    background-image url("../img/backgrounds/footer-2x.jpg")
    background-position bottom
    background-size cover
    display flex
    flex-wrap wrap
    height 100%
    justify-content center
    padding 61px 85px 0 85px

  &-column
    &:nth-child(3)
      margin-left 62px
      margin-right 62px

    .views, .convert, .findOut, .email
      color $c-white
      font-family 'avenir-next-medium'
      -webkit-font-smoothing antialiased
      font-weight $regular

    .views
      font-size 16px
      margin-bottom 10px

      &.active
        font-weight bold

    .convert
      display block
      font-size 15px
      padding 0 0 18px 0

    .findOut
      align-items center
      background-color $c-blue-2
      border-radius 4px
      display flex
      font-size 14px
      height 41px
      justify-content center
      width 179px

      &:hover
        background-color #1659a5

    .address, .terms
      color $c-white
      font-family 'avenir-next-regular'
      -webkit-font-smoothing antialiased
      font-weight $regular

    .address
      display block
      font-size 13px
      line-height 21px
      width 174px

    .terms
      font-size 15px
      margin-bottom 10px

  &-logo
    height 50px
    width auto

    &-container
      margin-right 84px

  &-bottom
    align-items center
    background-color $c-blue-2
    display flex
    height 43px
    justify-content center

    .copyright
      color $c-white
      font-family 'avenir-next-regular'
      -webkit-font-smoothing antialiased
      font-size 13px
      font-weight $regular

@media screen and (max-width 1100px)
  .footer
    height auto

    &-content
      justify-content flex-start
      padding 56px 0 10px 40px

    &-column
      margin-right 30px
      margin-bottom 25px

      &:nth-child(3)
        margin-left 0
        margin-right 30px

    &-logo
      &-container
        margin 0 0 35px 0
        width 100%
