.aboutus
  .cover
    align-items center
    background-image url("../img/backgrounds/acerca-de-nosotros-cover-2x.jpg")
    background-position center
    background-size cover
    display flex
    flex-direction column
    height 322px
    justify-content center
    padding 0 30px

    &-title
      color $c-white
      font-family 'avenir-next-demi'
      -webkit-font-smoothing antialiased
      font-size 64px
      font-weight $regular

  .data
    display flex
    flex-wrap wrap
    justify-content center
    margin 0 auto
    padding 56px 0 34px 0
    width 812px

    &-card
      align-items center
      display flex
      flex-direction column
      margin 15px

      &-img
        &-container
          align-items center
          display flex
          height 108px

      .icon
        &Clientes
          height 84px
          width 53px

        &Transportistas
          height 71px
          width 99px

        &Envios
          height 54px
          width 100px

        &KMRecorridos
          height 108px
          width 83px

        &C02Ahorrado
          height 63px
          width 81px

        &DineroAhorrado
          height 56px
          width 75px

      &-numbers
        color $c-blue-4
        font-family 'avenir-next-demi'
        -webkit-font-smoothing antialiased
        font-size 20px
        font-weight $regular
        margin 17px 0 8px 0

      &-title
        color $c-black
        font-family 'avenir-next-demi'
        -webkit-font-smoothing antialiased
        font-size 15px
        font-weight $regular

  .description
    border-top solid 1px $c-gray
    padding 80px 30px 62px 30px

    &-content
      margin 0 auto
      width 780px

    &-paragraph
      color $c-black
      font-family 'avenir-next-regular'
      -webkit-font-smoothing antialiased
      font-size 18px
      font-weight $regular
      line-height 28px
      margin-bottom 28px

@media screen and (max-width 860px)
  .aboutus
    .data
      width 456px

    .description
      &-content
        width 100%

@media screen and (max-width 480px)
  .aboutus
    .cover
      &-title
        font-size 50px

    .data
      padding 30px 0
      width 299px

    .description
      padding 30px

